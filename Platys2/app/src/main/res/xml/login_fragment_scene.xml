<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@+id/start"
        motion:duration="1000">
       <KeyFrameSet>
           <KeyAttribute
               motion:motionTarget="@id/tlEmail"
               motion:framePosition="99"
               android:alpha="1" />
           <KeyAttribute
               motion:motionTarget="@id/tlPassword"
               motion:framePosition="99"
               android:alpha="1" />
           <KeyAttribute
               motion:motionTarget="@id/btLogin"
               motion:framePosition="99"
               android:alpha="1" />
           <KeyAttribute
               motion:motionTarget="@id/tvRegisterLink"
               motion:framePosition="99"
               android:alpha="1" />
           <KeyAttribute
               motion:motionTarget="@id/tlEmail"
               motion:framePosition="0"
               android:alpha="0"/>
           <KeyAttribute
               motion:motionTarget="@id/tlPassword"
               motion:framePosition="0"
               android:alpha="0"/>
           <KeyAttribute
               motion:motionTarget="@id/btLogin"
               motion:framePosition="0"
               android:alpha="0"/>
           <KeyAttribute
                motion:motionTarget="@id/tvRegisterLink"
                motion:framePosition="0"
                android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@id/tlEmail"
               motion:framePosition="80"
               android:alpha="0.5"/>
           <KeyAttribute
               motion:motionTarget="@id/tlPassword"
               motion:framePosition="80"
               android:alpha="0.5"/>
           <KeyAttribute
               motion:motionTarget="@id/btLogin"
               motion:framePosition="80"
               android:alpha="0.5"/>
           <KeyAttribute
               motion:motionTarget="@id/tvRegisterLink"
               motion:framePosition="80"
               android:alpha="0.5"/>
       </KeyFrameSet>
        <OnClick motion:targetId="@id/loginImageView"
            motion:clickAction="transitionToEnd"/>
    </Transition>

    <ConstraintSet android:id="@+id/start">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@id/loginImageView"
            android:layout_width="@dimen/login_screen_img_size"
            android:layout_height="@dimen/login_screen_img_size"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintBottom_toTopOf="@id/tlEmail"
            android:layout_marginBottom="@dimen/standard_margin"/>
    </ConstraintSet>

    <Transition
        motion:constraintSetStart="@+id/loginStart"
        motion:constraintSetEnd="@+id/loginEnd"
        motion:duration="500">
        <KeyFrameSet>
            <KeyAttribute
                motion:framePosition="80"
                motion:motionTarget="@id/loginIndicator"
                android:alpha="0.5"/>
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/loginStart">
        <Constraint
            android:id="@id/loginImageView"
            android:layout_width="@dimen/login_screen_img_size"
            android:layout_height="@dimen/login_screen_img_size"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintBottom_toTopOf="@id/tlEmail"
            android:layout_marginBottom="@dimen/standard_margin"/>
        <Constraint
            android:id="@id/loginIndicator"
            android:alpha="0"/>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/loginEnd">
        <Constraint
            android:id="@id/loginImageView"
            android:layout_width="@dimen/login_screen_img_size"
            android:layout_height="@dimen/login_screen_img_size"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintBottom_toTopOf="@id/tlEmail"
            android:layout_marginBottom="@dimen/standard_margin"/>
        <Constraint
            android:id="@id/btLogin"
            android:layout_width="@dimen/text_field_height"
            android:layout_height="@dimen/text_field_height"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent" />
        <Constraint
            android:id="@id/loginIndicator"
            android:alpha="1"/>
    </ConstraintSet>

    <Transition
        motion:constraintSetStart="@+id/loginButtonClickDoneStart"
        motion:constraintSetEnd="@+id/loginButtonClickDoneEnd"
        motion:duration="500">
        <KeyFrameSet>
            <KeyAttribute
                motion:framePosition="20"
                motion:motionTarget="@id/loginIndicator"
                android:alpha="0.2"/>
            <KeyAttribute
                motion:framePosition="30"
                motion:motionTarget="@id/loginIndicator"
                android:alpha="0"/>
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/loginButtonClickDoneStart">
        <Constraint
            android:id="@id/loginImageView"
            android:layout_width="@dimen/login_screen_img_size"
            android:layout_height="@dimen/login_screen_img_size"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintBottom_toTopOf="@id/tlEmail"
            android:layout_marginBottom="@dimen/standard_margin"/>
        <Constraint
            android:id="@id/btLogin"
            android:layout_width="@dimen/text_field_height"
            android:layout_height="@dimen/text_field_height"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent" />
        <Constraint
            android:id="@id/loginIndicator"
            android:alpha="1"/>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/loginButtonClickDoneEnd">
        <Constraint
            android:id="@id/loginImageView"
            android:layout_width="@dimen/login_screen_img_size"
            android:layout_height="@dimen/login_screen_img_size"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintBottom_toTopOf="@id/tlEmail"
            android:layout_marginBottom="@dimen/standard_margin"/>
        <Constraint
            android:id="@id/btLogin"
            android:layout_width="@dimen/login_button_width"
            android:layout_height="@dimen/text_field_height"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent" />
        <Constraint
            android:id="@id/loginIndicator"
            android:alpha="0"/>
    </ConstraintSet>

    <Transition
        motion:constraintSetStart="@+id/emailErrorAnimStart"
        motion:constraintSetEnd="@+id/emailErrorAnimEnd"
        motion:duration="500">
        <KeyFrameSet>
            <KeyAttribute
                motion:framePosition="50"
                motion:motionTarget="@id/tlEmail"
                android:scaleX="1.3"/>
        </KeyFrameSet>
    </Transition>

    <Transition
        motion:constraintSetStart="@+id/passwordErrorAnimStart"
        motion:constraintSetEnd="@+id/passwordErrorAnimEnd"
        motion:duration="500">
        <KeyFrameSet>
            <KeyAttribute
                motion:framePosition="50"
                motion:motionTarget="@id/tlPassword"
                android:scaleX="1.3"/>
        </KeyFrameSet>
    </Transition>

    <Transition
        motion:constraintSetStart="@+id/fieldErrorAnimStart"
        motion:constraintSetEnd="@+id/fieldErrorAnimEnd"
        motion:duration="500">
        <KeyFrameSet>
            <KeyAttribute
                motion:framePosition="50"
                motion:motionTarget="@id/tlPassword"
                android:scaleX="1.3"/>
            <KeyAttribute
                motion:framePosition="50"
                motion:motionTarget="@id/tlEmail"
                android:scaleX="1.3"/>
        </KeyFrameSet>
    </Transition>

    <Transition
        motion:constraintSetStart="@id/errorAnimEnd"
        motion:constraintSetEnd="@id/errorAnimStart"
        motion:duration="500">
        <KeyFrameSet>
        </KeyFrameSet>
    </Transition>

    <ConstraintSet
        android:id="@+id/errorAnimStart">
        <Constraint
            android:id="@id/loginImageView"
            android:layout_width="@dimen/login_screen_img_size"
            android:layout_height="@dimen/login_screen_img_size"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintBottom_toTopOf="@id/tlEmail"
            android:layout_marginBottom="@dimen/standard_margin"/>
        <Constraint
            android:id="@id/btLogin"
            android:layout_width="@dimen/login_button_width"
            android:layout_height="@dimen/text_field_height"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent" />
        <Constraint
            android:id="@id/loginIndicator"
            android:alpha="0"/>
        <Constraint
            android:id="@id/tlEmail"
            android:layout_width="0dp"
            android:alpha="1"
            android:layout_marginStart="@dimen/large_margin"
            android:layout_marginEnd="@dimen/large_margin"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"/>
        <Constraint
            android:id="@id/tlPassword"
            android:layout_width="0dp"
            android:alpha="1"
            android:layout_marginStart="@dimen/large_margin"
            android:layout_marginEnd="@dimen/large_margin"
            motion:layout_constraintTop_toBottomOf="@id/tlEmail"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"/>
    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/errorAnimEnd">
        <Constraint
            android:id="@id/loginImageView"
            android:layout_width="@dimen/login_screen_img_size"
            android:layout_height="@dimen/login_screen_img_size"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintBottom_toTopOf="@id/tlEmail"
            android:layout_marginBottom="@dimen/standard_margin"/>
        <Constraint
            android:id="@id/btLogin"
            android:layout_width="@dimen/login_button_width"
            android:layout_height="@dimen/text_field_height"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent" />
        <Constraint
            android:id="@id/loginIndicator"
            android:alpha="0"/>
        <Constraint
            android:id="@id/tlEmail"
            android:layout_width="0dp"
            android:alpha="1"
            android:layout_marginStart="@dimen/large_margin"
            android:layout_marginEnd="@dimen/large_margin"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_goneMarginBottom="@dimen/standard_margin"
            android:layout_height="wrap_content"/>
        <Constraint
            android:id="@id/tlPassword"
            android:layout_width="0dp"
            android:alpha="1"
            android:layout_marginStart="@dimen/large_margin"
            android:layout_marginEnd="@dimen/large_margin"
            motion:layout_constraintTop_toBottomOf="@id/tlEmail"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"/>
    </ConstraintSet>
</MotionScene>